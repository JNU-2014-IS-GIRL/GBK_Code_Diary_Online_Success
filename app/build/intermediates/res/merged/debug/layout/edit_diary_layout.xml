<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <RelativeLayout
  		android:orientation="vertical"
  		android:layout_width="match_parent"
  		android:layout_height="wrap_content">
    	<Button 
    		android:id="@+id/edit_Return_Button"
    		android:layout_alignParentLeft="true"
    		android:layout_width="55dip"
    		android:layout_height="wrap_content"
    		android:text="返回"
    		style="@android:style/TextAppearance.Small"
    		android:onClick="edit_Return_OnClickListener"
    		/>
    	<Button 
    		android:id="@+id/edit_Save_Button"
    		android:layout_alignParentRight="true"
   			android:layout_width="55dip"
    		android:layout_height="wrap_content"
    		android:text="保存 "
    		style="@android:style/TextAppearance.Small"
    		android:onClick="edit_Save_OnClickListener"
        	/>
    	<EditText 
   		 	android:id="@+id/edit_Title_EditText"
    		android:layout_toLeftOf="@id/edit_Save_Button"
    		android:layout_toRightOf="@id/edit_Return_Button"
    		android:layout_width="match_parent"
    		android:layout_height="wrap_content"
			android:maxLines="1"
    		android:gravity="center"
    		/>
	</RelativeLayout>
	    <EditText 
	        android:id="@+id/edit_Words"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:background="@android:drawable/editbox_background"
	        android:gravity="top|left"/>

</LinearLayout>
