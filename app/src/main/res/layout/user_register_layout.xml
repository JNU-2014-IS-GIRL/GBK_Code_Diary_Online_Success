<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" 
android:layout_height="wrap_content" 
android:layout_width="match_parent" 
xmlns:android="http://schemas.android.com/apk/res/android">
<TextView 
    android:layout_height="wrap_content" 
    android:layout_width="fill_parent" 
    android:textColor="@android:color/white" 
    android:text="用户注册" 
    android:gravity="center_horizontal" 
    android:id="@+id/title"/>
    <LinearLayout 
        android:orientation="vertical" 
        android:layout_height="wrap_content" 
        android:layout_width="fill_parent" 
        android:background="@drawable/pic_tip_bai_bg" 
        android:layout_marginRight="50dp" 
        android:layout_marginLeft="10dp">
        <LinearLayout android:orientation="horizontal" 
            android:layout_height="wrap_content" 
            android:layout_width="match_parent" 
            android:layout_marginTop="10dp">

            <EditText android:layout_height="wrap_content" 
                android:layout_width="fill_parent" 
                android:id="@+id/user_Register_Name" 
                android:background="@android:color/white"
                android:maxLines="1"
                android:hint="请输入用户名!"/>
        </LinearLayout>
        <View android:layout_height="1dip" 
            android:layout_width="match_parent" 
            android:background="@android:color/darker_gray" 
            android:layout_marginRight="2dp" 
            android:layout_marginLeft="2dp"/>
        <LinearLayout 
            android:orientation="horizontal" 
            android:layout_height="wrap_content" 
            android:layout_width="match_parent" 
            android:layout_marginBottom="10dp">

            <EditText 
                android:layout_height="wrap_content" 
                android:layout_width="fill_parent" 
                android:id="@+id/user_Register_Password" 
                android:background="@android:color/white"
                android:maxLines="1"
                android:hint="请输入登录密码!" 
                android:inputType="textPassword"/>
        </LinearLayout>
        <View android:layout_height="1dip" 
            android:layout_width="match_parent" 
            android:background="@android:color/darker_gray" 
            android:layout_marginRight="2dp" 
            android:layout_marginLeft="2dp"/>
        <LinearLayout 
            android:orientation="horizontal" 
            android:layout_height="wrap_content" 
            android:layout_width="match_parent" 
            android:layout_marginBottom="10dp">

            <EditText android:layout_height="wrap_content" 
                android:layout_width="fill_parent" 
                android:id="@+id/user_Register_PasswordNext" 
                android:background="@android:color/white"
                android:maxLines="1"
                android:hint="请再次输入登录密码!" 
                android:inputType="textPassword"/>
        </LinearLayout>
  </LinearLayout>

        <LinearLayout 
            android:orientation="horizontal" 
            android:layout_height="wrap_content" 
            android:layout_width="match_parent" 
            android:layout_marginRight="50dp" 
            android:layout_marginLeft="10dp" 
            android:layout_marginTop="10dp">
        <Button 
            android:layout_height="39dp" 
            android:layout_width="fill_parent" 
            android:textColor="@android:color/black" 
            android:text="免费注册" 
            android:id="@+id/button1" 
            android:background="@drawable/white_button" 
            android:onClick="onClickListener_Register"
            android:layout_weight="1"/>
        </LinearLayout>
</LinearLayout>